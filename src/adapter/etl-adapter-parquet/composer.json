{
    "name": "flow-php/etl-adapter-parquet",
    "type": "library",
    "description": "PHP ETL - Adapter - Parquet",
    "keywords": [
        "etl",
        "extract",
        "transform",
        "load",
        "parquet",
        "adapter"
    ],
    "require": {
        "php": "~8.1 || ~8.2",
        "ext-json": "*",
        "codename/parquet": "~0.6.2 || ~0.7.0",
        "flow-php/etl": "^0.2 || 1.x-dev"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Flow\\": [
                "src/Flow"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flow\\": "tests/Flow"
        }
    },
    "scripts": {
        "build": [
            "@static:analyze",
            "@test"
        ],
        "test": [
            "tools/vendor/bin/phpunit"
        ],
        "static:analyze": [
            "tools/vendor/bin/psalm --output-format=compact",
            "tools/vendor/bin/phpstan analyze -c phpstan.neon",
            "tools/vendor/bin/php-cs-fixer fix --dry-run"
        ],
        "cs:php:fix": "tools/vendor/bin/php-cs-fixer fix",
        "tools:install": "composer install --working-dir=./tools",
        "post-install-cmd": [
            "@tools:install"
        ],
        "post-update-cmd": [
            "@tools:install"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
